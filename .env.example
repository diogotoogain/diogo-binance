# =============================================
# SNAME-MR: CONFIGURAÇÕES DO ROBÔ
# =============================================
# Copie este arquivo para .env e configure seus valores
# cp .env.example .env

# === BINANCE DEMO API ===
BINANCE_API_KEY=SUA_API_KEY_AQUI
BINANCE_SECRET_KEY=SUA_SECRET_KEY_AQUI

# === AMBIENTE ===
# true = Demo Trading (usa API Real fapi.binance.com com header X-MBX-DEMO)
#        Use as API keys criadas em demo.binance.com
# false = Produção REAL (fapi.binance.com) - CUIDADO!
USE_DEMO=true

# === SÍMBOLO ===
SYMBOL=BTCUSDT

# === RISK MANAGEMENT (PARAMETRIZÁVEL) ===
# Porcentagem do saldo arriscado por trade (0.01 = 1%)
RISK_PER_TRADE=0.01

# Tamanho máximo da posição em relação ao saldo (0.05 = 5%)
MAX_POSITION_SIZE=0.05

# Perda máxima diária antes de parar (0.03 = 3%)
MAX_DAILY_LOSS=0.03

# Número máximo de posições simultâneas
MAX_CONCURRENT_POSITIONS=1

# === POSITION MANAGEMENT (PARAMETRIZÁVEL) ===
# Stop Loss padrão (0.01 = 1%)
DEFAULT_SL_PERCENT=0.01

# Take Profit padrão (0.02 = 2%)
DEFAULT_TP_PERCENT=0.02

# Usar Trailing Stop? (true/false)
USE_TRAILING_STOP=false

# Porcentagem do Trailing Stop (0.005 = 0.5%)
TRAILING_PERCENT=0.005

# === EXECUTION (PARAMETRIZÁVEL) ===
# Confiança mínima para executar (MEDIUM, HIGH, MAX)
MIN_CONFIDENCE=HIGH

# Habilitar execução real? (true = executa, false = só loga)
EXECUTION_ENABLED=true

# === DATABASE ===
DATABASE_URL=postgresql://admin:adminpassword@localhost:5432/sname_mr_db